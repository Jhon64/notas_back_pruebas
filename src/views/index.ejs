    <title>Document</title>
    <link rel="stylesheet" href="./public/assets/css/bootstrap.css">
    <script src='./public/assets/js/axios.js'></script>
</head>

<body>
    <div class="container-fluid">
        <div class="card-title text-center mt-5 px-3"><h2>APURATA DEMO</h2></div>
        <div class="row">
            <div class=" col-sm-4">
                <div class="card m-4">
                    <div class="card-body">
                        <div class="text-center">Producto Uno</div>
                        <div class="text-center">monto :100</div>
                        <div class="d-grid">
                        <button class=" btn btn-sm btn-success" onclick="create_order(1,100)">
                           Pagar 100
                        </button>
                    </div>
                    </div>
                </div>
            </div>
             <div class=" col-sm-4">
                <div class="card m-4">
                    <div class="card-body">
                        <div class="text-center">Producto DOS</div>
                        <div class="text-center">monto :200</div>
                        <div class="d-grid">
                            <button class=" btn btn-sm btn-success"  onclick="create_order(2,200)">
                                Pagar 200
                            </button>
                    </div>
                </div>
            </div>
          </div>
          <div class=" col-sm-4">
            <div class="card m-4">
                <div class="card-body">
                    <div class="text-center">Producto tres</div>
                    <div class="text-center">monto :300</div>
                    <div class="d-grid">
                        <button class=" btn btn-sm btn-success"  onclick="create_order(3,300)">
                            Pagar 300
                        </button>
                </div>
            </div>
        </div>
    
    </div>
    <script>
        function create_order(product_id,monto){
            location.href='http://localhost:5500/create-order-apurata?monto='+monto+'&product_id='+product_id
        }

    </script>
